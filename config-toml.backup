baseURL = "/"
languageCode = "en-us"
ignoreErrors = ["error-remote-getjson"]
theme = "santm-bulma_v2"
enableEmoji = true
[wordCount]
other = "{{ .WordCount }} words"

[languages]
  [languages.en]
    title = "Aashiyana of Pamela Santanu"


[params]
  author = "Santanu Misra"
  description = "Rumblings on life, travel or anything under sun"
  
  [[params.FootMenu]]
    medium = "rss"
    icon = "fas fa-rss"
    link = "/index.xml"
  [[params.FootMenu]]
    medium = "facebook"
    icon = "fab fa-facebook"
    link = "https://www.facebook.com/santm"
  [[params.FootMenu]]
    medium = "instagram"
    icon = "fab fa-instagram"
    link = "https://www.instagram.com/s.a.n.t.m/"
  [[params.FootMenu]]
    medium = "linkedin"
    icon = "fab fa-linkedin-in"
    link = "https://www.linkedin.com/in/santm/"
  [[params.FootMenu]]
    medium = "tumblr"
    icon = "fab fa-tumblr"
    link = "https://pamelascreation.tumblr.com/"

  [[params.RightMenu]]
    medium = "Blog"
    icon = "far fa-newspaper "
    link = "/blog"
  [[params.RightMenu]]
    medium = "Birds & Wildlife"
    icon = "fa fa-paw "
    link = "/bird-wildlife"
  [[params.RightMenu]]
    medium = "Travel Picture"
    icon = "fa fa-camera-retro "
    link = "/album"  
  [[params.RightMenu]]
    medium = "About"
    icon = "fa fa-user "
    link = "/about"
  [[params.RightMenu]]
    medium = "Contact"
    icon = "fa fa-id-card "
    link = "/contact"
  [[params.RightMenu]]
    medium = "Tags"
    icon = "fa fa-tags "
    link = "/tags"
[taxonomies]
    year = "year"
    month = "month"
    tags = "tags"
    category = "categories"
[permalinks]
    post = "/posts/:year/:month/:slug/"
    year = "/posts/:slug/"
    month = "/posts/:slug/"
[related]
  includeNewer = true
  threshold = 80
  toLower = false
[[related.indices]]
  name = "categories"
  weight = 100
